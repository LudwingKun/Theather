<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compagnia Teatrale</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Oratorio di Lein√¨ a teatro</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#spettacoli">Spettacoli</a></li>
                <li class="nav-item"><a class="nav-link" href="#contatti">Contatti</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Hero -->
<header id="titlePad" class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Benvenuti nella tana del bianconiglio</h1>
        <p class="lead">Scopri i nostri spettacoli e prenota il tuo posto!</p>
    </div>
</header>
<!-- Spettacoli -->
<section id="spettacoli" class="container py-5">
    <h2 class="text-center mb-4">Le date disponibili</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% shows.forEach(spettacolo => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="<%= spettacolo.immagine %>" class="card-img-top" alt="<%= spettacolo.titolo %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= spettacolo.titolo %></h5>
                        <p class="text-muted"><%= spettacolo.data %></p>
                        <p class="card-text flex-grow-1"><%= spettacolo.descrizione %></p>
                        <a href="/spettacoli/<%= spettacolo.id %>?data=<%= spettacolo.data %>"
                           class="btn btn-primary mt-auto">
                            Prenota
                        </a>

                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</section>


<!-- Contatti -->
<section id="contatti" class="container py-5">
    <h2 class="text-center mb-4">Contattaci</h2>
    <p class="text-center">Email: <a href="mailto:oratorioleini@spettacoli.com">info@compagnia.com</a></p>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
